@article{Edwards2012,
abstract = {The ability to make precise and spatially resolved measurements of velocity in gas flows, particularly air flows, is crucial for understanding fluid dynamics, developing computational codes to simulate fluids, and optimizing the design of engineering applications that interact with fluids. In this report we characterize femtosecond laser electronic excitation tagging (FLEET), a novel optical flow diagnostic potentially allowing simultaneous high resolution line measurements of velocity, temperature, density, and species concentration. A line of long lived emission generated in the focal region of the laser can be followed with a fast- gated camera; displacement of the line and knowledge of the image timing give flow velocity. The probable mechanism underlying FLEET has been determined to be dissociation of molecular nitrogen by femtosecond laser pulse into atomic nitrogen; recombination of the ni- trogen atoms drives emission from the nitrogen first positive system. We have demonstrated FLEET's velocimetry capabilities in free jets with single shot uncertainties on the order of meters per second and 100 µm spatial resolution. Strong emission from the nitrogen second positive system offers the possibility of extracting gas temperature from the shape of the rotational spectra and ratios between the second positive and first negative systems and our results confirm an ability to distinguish spectra at different temperatures. FLEET's ability to make line measurements with high spatial resolution is ideal for studying turbulence, and we have demonstrated the measurement of turbulent parameters. FLEET also offers the possibility of making density and species measurements from Rayleigh scattering and the emission spectrum, although these capabilities have not been experimentally demonstrated. As an unseeded, high resolution, and relatively simple system, FLEET offers several advan- tages over existing flow diagnostic methods, and may be suitable for deployment in a wide variety of applications.},
author = {Edwards, Matthew R},
file = {:C$\backslash$:/Users/Amelia/Documents/WORK!/FilamentationDocs/mredwards{\_}THESIS{\_}electronic.pdf:pdf},
title = {{Femtosecond laser electronic excitation tagging}},
year = {2012}
}
