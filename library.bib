file = {:C$\backslash$:/Users/Amelia/Documents/Courses/Thesis/Literature/ResslerEtAl2015{\_}ElectronThermodynamicsGRMHDLowLuminosityBlackHoleAccretion.pdf:pdf},
issn = {0035-8711},
journal = {Monthly Notices of the Royal Astronomical Society},
keywords = {Accretion,Astrophysics - High Energy Astrophysical Phenomena,RIAF},
mendeley-tags = {Accretion,RIAF},
